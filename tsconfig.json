{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "removeComments": true,
        "target": "es6",
        "outDir": "./Server/backend",
        "strict": true,
        "sourceMap": false,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "Development/**/*.ts"
    ]
}